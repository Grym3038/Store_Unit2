@{
    ViewData["Title"] = "Home Page";
}
@model List<Product>
<div class="container mt-4 bg-dark text-light rounded">
    <h2>Our Products</h2>
       <div class="alert alert-warning" role="alert">
        <strong>Disclaimer:</strong> This is a parody store. Please don't sue me, Apple! 🙃
    </div>
    <div class="row bg-dark text-light rounded">
        @foreach (Product product in Model)
        {
                    <div class="col-md-4 mb-4 bg-dark text-light rounded">
                        <div class="card bg-dark text-light p-4 rounded">
                        <img class="card-img-top" src="@product.ImagePath" alt="@product.Name" style="max-height: 200px; object-fit: cover;">
                        <div class="card-body">
                            <h5 class="card-title">@product.Name</h5>
                            <p class="card-text">@product.Description</p>
                            <p class="card-text"><strong>Price: $@product.Price</strong></p>
                        </div>
                    </div>
                </div>
        }
    </div>