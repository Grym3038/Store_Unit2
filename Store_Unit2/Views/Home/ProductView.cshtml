@model Product

@{
    ViewData["Title"] = Model.Name; // Set the title to the product name
     

}

<div class="container mt-4 bg-dark text-light p-4 rounded">
    <h1 class="text-center">@Model.Name</h1>
    <div class="row">
        <div class="col-md-6">
            <img src="@Model.ImagePath" alt="@Model.Name" class="img-fluid" />
        </div>
        <div class="col-md-6">
            <h3>Description</h3>
            <p>@Model.Description</p>
            <h4>Price: $@Model.Price</h4>
            <a asp-action="Edit" asp-controller="Home" asp-route-id="@Model.Id" class="btn btn-primary">Edit</a>
            <a asp-action="Delete" asp-controller="Home" asp-route-id="@Model.Id" class="btn btn-danger">Delete</a>
            <a href="@Url.Action("Index", "Home")" class="btn btn-secondary">Back to Products</a>
        </div>
    </div>
</div>
